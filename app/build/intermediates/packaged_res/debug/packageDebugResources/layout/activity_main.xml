<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background color for areas outside the 4:3 preview -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <!-- GLSurfaceView for filtered preview - constrained to 4:3 aspect ratio -->
    <com.graincamera.AspectRatioGLSurfaceView
        android:id="@+id/glView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <!-- Controls overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#66000000"
        android:padding="12dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/film_sim"
                android:textColor="@android:color/white"
                android:paddingEnd="8dp"/>

            <Spinner
                android:id="@+id/filmSpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>

            <Button
                android:id="@+id/switchBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/switch_camera"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/halation" 
                android:textColor="@android:color/white"/>
            <SeekBar 
                android:id="@+id/halationSeek" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" 
                android:progress="20"/>

            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bloom" 
                android:textColor="@android:color/white"/>
            <SeekBar 
                android:id="@+id/bloomSeek" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" 
                android:progress="30"/>

            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/grain" 
                android:textColor="@android:color/white"/>
            <SeekBar 
                android:id="@+id/grainSeek" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" 
                android:progress="15"/>
        </LinearLayout>

        <Button
            android:id="@+id/captureBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/capture"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</FrameLayout>
